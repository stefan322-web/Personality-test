<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Chestionar rapid 16 Personalități — 2–3 minute</title>
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial;max-width:820px;margin:18px auto;padding:18px}
    h1,h2{margin:6px 0}
    .question{border:1px solid #eee;padding:10px;border-radius:8px;margin:10px 0}
    .opts{display:flex;gap:8px;justify-content:space-between;margin-top:8px}
    label{font-size:14px}
    button{padding:10px 14px;border-radius:8px;border:0;background:#0066cc;color:white;font-weight:600}
    .result{border:1px solid #ddd;padding:14px;border-radius:10px;margin-top:12px;background:#fafafa}
    .small{font-size:13px;color:#555}
  </style>
</head>
<body>
  <h1>Chestionar rapid 16 Personalități (stil MBTI) — 2–3 minute</h1>
  <p class="small">12 afirmații scurte. Pentru fiecare, alege cât de mult eşti de acord. Apasă <strong>Trimite</strong> când termini; testul nu are cronometru.</p>

  <div id="quiz"></div>

  <div style="display:flex;gap:8px;margin-top:8px">
    <button id="submit">Trimite</button>
    <button id="reset" style="background:#888">Resetează</button>
  </div>

  <div id="output"></div>

  <script>
    // Întrebări: text, axă (EI, SN, TF, JP) și semn: +1 înseamnă acord -> prima literă, -1 înseamnă acord -> a doua literă
    const QUESTIONS = [
      {q: "Îmi place să fiu în centrul atenției.", axis: 'EI', sign: +1},
      {q: "Prefer activitățile în grup mare față de întâlnirile unu-la-unu.", axis: 'EI', sign: +1},
      {q: "Mă încarc cel mai bine petrecând timp singur pentru reflecție.", axis: 'EI', sign: -1},

      {q: "Mă concentrez pe fapte concrete și detalii prezente.", axis: 'SN', sign: +1},
      {q: "Îmi place să imaginez posibilități și pattern-uri viitoare.", axis: 'SN', sign: -1},
      {q: "Soluțiile practice îmi plac mai mult decât teoriile abstracte.", axis: 'SN', sign: +1},

      {q: "Ia decizii bazate în principal pe logică și analiză obiectivă.", axis: 'TF', sign: +1},
      {q: "Ia decizii ținând cont de sentimentele altora.", axis: 'TF', sign: -1},
      {q: "Coerența și corectitudinea îmi ghidează judecățile mai mult decât sentimentele personale.", axis: 'TF', sign: +1},

      {q: "Prefer planuri detaliate și să termin din timp în loc de flexibilitate de ultim moment.", axis: 'JP', sign: +1},
      {q: "Îmi place să păstrez opțiunile deschise și să fiu spontan.", axis: 'JP', sign: -1},
      {q: "Tind să finalizez sarcinile înainte de termenele limită.", axis: 'JP', sign: +1}
    ];

    // Denumiri tipuri + două exemple de persoane celebre (pentru distracție în clasă; nu e un diagnostic)
    const TYPE_INFO = {
      'INFJ': {name:'Avocat (INFJ)', people:['Martin Luther King Jr.','Nelson Mandela']},
      'ENFP': {name:'Campion (ENFP)', people:['Robin Williams','Robert Downey Jr.']},
      'INTJ': {name:'Arhitect (INTJ)', people:['Elon Musk','Christopher Nolan']},
      'ENTJ': {name:'Conducător (ENTJ)', people:['Steve Jobs','Gordon Ramsay']},
      'ISTJ': {name:'Logistician (ISTJ)', people:['Natalie Portman','Denzel Washington']},
      'ISFJ': {name:'Apărător (ISFJ)', people:['Beyoncé','Regina Elisabeta a II-a']},
      'ESFJ': {name:'Consul (ESFJ)', people:['Taylor Swift','Jennifer Lopez']},
      'ESFP': {name:'Artist (ESFP)', people:['Elton John','Marilyn Monroe']},
      'INTP': {name:'Logician (INTP)', people:['Bill Gates','Albert Einstein']},
      'INFP': {name:'Mediator (INFP)', people:['William Shakespeare','J.R.R. Tolkien']},
      'ISTP': {name:'Virtuos (ISTP)', people:['Ernest Hemingway','Amelia Earhart']},
      'ISFP': {name:'Aventurier (ISFP)', people:['Frida Kahlo','David Beckham']},
      'ENTP': {name:'Debatant (ENTP)', people:['Thomas Edison','Mark Twain']},
      'ENFJ': {name:'Protagonist (ENFJ)', people:['Oprah Winfrey','Barack Obama']},
      'ESTJ': {name:'Executor (ESTJ)', people:['Margaret Thatcher','Kamala Harris']},
      'ESTP': {name:'Antreprenor (ESTP)', people:['Madonna','Donald Trump']}
    };

    // Randează chestionarul
    const quiz = document.getElementById('quiz');
    QUESTIONS.forEach((it, i) => {
      const div = document.createElement('div'); div.className='question';
      div.innerHTML = `<strong>Întrebarea ${i+1}.</strong> ${it.q}
        <div class="opts">
          <label><input type="radio" name="q${i}" value="1"> 1 (Total dezacord)</label>
          <label><input type="radio" name="q${i}" value="2"> 2</label>
          <label><input type="radio" name="q${i}" value="3" checked> 3 (Neutru)</label>
          <label><input type="radio" name="q${i}" value="4"> 4</label>
          <label><input type="radio" name="q${i}" value="5"> 5 (Total acord)</label>
        </div>`;
      quiz.appendChild(div);
    });

    function computeResult(){
      // acumulează scoruri pe axe
      const axes = {EI:0, SN:0, TF:0, JP:0};
      for(let i=0;i<QUESTIONS.length;i++){
        const sel = document.querySelector(`input[name=q${i}]:checked`);
        const val = sel ? Number(sel.value) : 3; // implicit neutru
        const {axis, sign} = QUESTIONS[i];
        // centrează răspunsurile în jurul lui 3 -> -2..+2, înmulțește cu sign ca pozitiv = prima literă
        const contrib = (val - 3) * sign;
        axes[axis] += contrib;
      }
      // decide literele
      const letters = [];
      letters.push(axes.EI > 0 ? 'E' : 'I');
      letters.push(axes.SN > 0 ? 'S' : 'N');
      letters.push(axes.TF > 0 ? 'T' : 'F');
      letters.push(axes.JP > 0 ? 'J' : 'P');
      const type = letters.join('');
      return {type, axes};
    }

    function showResult(){
      const {type, axes} = computeResult();
      const info = TYPE_INFO[type] || {name:type, people:[]};
      const out = document.getElementById('output');
      out.innerHTML = `<div class="result">
        <h2>Rezultatul tău rapid: ${info.name} — <span class="small">(${type})</span></h2>
        <p class="small">Scoruri pe axe (interne): EI=${axes.EI.toFixed(1)}, SN=${axes.SN.toFixed(1)}, TF=${axes.TF.toFixed(1)}, JP=${axes.JP.toFixed(1)}</p>
        <p>Persoane celebre asociate frecvent cu acest tip: <strong>${info.people.join(', ')}</strong></p>
        <p class="small">Notă: Acest test de 12 itemi este o versiune simplificată, creată pentru utilizare în clasă (2–3 minute). Pentru un profil mai detaliat folosiți un test mai lung și validat.</p>
      </div>`;
    }

    document.getElementById('submit').addEventListener('click', ()=>{ showResult(); });
    document.getElementById('reset').addEventListener('click', ()=>{ location.reload(); });

    // Accesibilitate: ENTER trimite
    window.addEventListener('keydown', (e)=>{ if(e.key==='Enter') showResult(); });

  </script>
</body>
</html>
